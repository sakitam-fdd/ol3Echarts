{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [
    ".eslintrc.cjs",
    "tsconfig.json"
  ],
  "globalEnv": [
    "CI",
    "NODE_ENV"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"]
    },
    "build:minify": {
      "dependsOn": ["^build:minify"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clear": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"],
      "outputs": [],
      "cache": true
    },
    "test": {
      "dependsOn": ["^build", "codegen-tests"],
      "cache": false
    },
    "test-only": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "coverage": {
      "dependsOn": ["^build"],
      "cache": false
    }
  }
}
